    $$ = doOperation($2, $1, $3);
  }
  | RTRESOURCE OPERATOR pause {
    $$ = doOperation($2,$1, $3);
  }
  | RTRESOURCE OPERATOR '(' operation ')' {
    $$ = doOperation($2, $1, $4);
  }

  | note OPERATOR note {
    $$ = doOperation($2, $1, $3);
  }
  | note OPERATOR RTRESOURCE {
    $$ = doOperation($2, $1, $3);
  }
  | note OPERATOR IDENTIFIER {
