  }
  | TONE_LITERAL OPERATOR RTRESOURCE {
    $$ = doOperation($2, $1, $3);
  }
  | TONE_LITERAL OPERATOR IDENTIFIER {
    $$ = doOperation($2, $1, $3);
  }
  | TONE_LITERAL OPERATOR note {
    $$ = doOperation($2, $1, $3);
  }
  | TONE_LITERAL OPERATOR sequence {
