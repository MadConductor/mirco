  }
;

id_list: 
  id_list ',' IDENTIFIER {
    $1->push_back($3);
    $$ = $1;
  }
  | IDENTIFIER {
    $$ = new vector<Identifier *>();
    $$->push_back($1);
  }
  | {
    $$ = new vector<Identifier *>();
  }
;

definition: 
  SEQUENCE IDENTIFIER '(' id_list ')' '{' node_list '}' {
    Definition *d = new Definition($2->id, $4, $7);
    defs[$2->id] = d;
  }
;

node_list: 
  node_list ',' sequence_node {
    $1->push_back($3);
    $$ = $1;
  }
  | sequence_node {
    $$ = new vector<SequenceNode *>();
    $$->push_back($1);
  }  
  | {
    $$ = new vector<SequenceNode *>();
  }
;

sequence:
  IDENTIFIER '(' node_list ')' {
    Definition *d = defs[$1->id];
    Sequence *i = new Sequence(d, $3);
    $$ = i;
  }
  | '{' node_list '}' {
    $$ = new Sequence(*$2);
  }
;

velocity:
  '|' INT {
    $$ = $2;
  }
;

denominator:
  ':' INT {
    $$ = new pair<uint_fast32_t, uint_fast32_t>($2, 1);
  }
  | ':' INT ':' INT {
    $$ = new pair<uint_fast32_t, uint_fast32_t>($2, $4);
  }
;

note: 
  NOTE {
    $$ = new Note($1);
  }
  | note velocity {
    $$ = new Note($1, $2);
  }
  | note denominator {
    $$ = new Note($1, 127, $2->first, $2->second);
  }
  | note velocity denominator {
    $$ = new Note($1, $2, $3->first, $3->second);
  }
;

pause:
  PAUSE {
    $$ = new Pause(1);
  }
  | pause denominator {
    $$ = new Pause($2->first);
  }
;

chord:
  '(' node_list ')' velocity {
    Chord *c = new Chord(*$2, $4);
    $$ = c;
  }
  | '(' node_list ')' denominator {
    Chord *c = new Chord(*$2, 127, $4->first, $4->second);
    $$ = c;
  }
  | '(' node_list ')' velocity denominator {
    Chord *c = new Chord(*$2, $4, $5->first, $5->second);
    $$ = c;
  }
  | '(' node_list ')' {
    Chord *c = new Chord(*$2);
    $$ = c;
  }
;

sequence_node:
  IDENTIFIER {
    $$ = (SequenceNode *)$1;
  } 
  | RTRESOURCE {
    $$ = (SequenceNode *)$1;
  } 
  | note {
    $$ = (SequenceNode *)$1;
  }
  | TONE_LITERAL {
    $$ = (SequenceNode *)$1;
  }
  | sequence {
    $$ = (SequenceNode *)$1;
  }  
  | operation {
    $$ = (SequenceNode *)$1;
  }
  | '(' operation ')' {
    $$ = (SequenceNode *)$2;
  }
  | chord {
    $$ = (SequenceNode *)$1;
  }
  | pause {
    $$ = (SequenceNode *)$1;
  }
;

map_target:
  NOTE {
    $$ = (new Note($1))->key;
  }
  | AUTO {
    $$ = -1;
  }
  | DEFAULT {
    $$ = -2;
  }
;

mapping: 
  map_target ':' sequence_node {
    eventMap[$1] = $3->renderRtEvents(0x00,1);
    printf(($3->toString()).c_str());
    printf("\n");
  }
;

exp:   
  exp definition {
  }
| exp mapping {
  }
| definition {
  }
| mapping {
  }
;
